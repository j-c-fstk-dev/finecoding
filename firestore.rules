rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for admin role
    function isAdmin() {
      return request.auth != null;
    }

    // PUBLIC ACCESS: Allow anyone to read posts and resources.
    // This is required for the website pages to be built and displayed correctly.
    match /posts/{postId} {
      allow get, list: if true;

      // Allow anyone to create comments and like posts (update).
      allow create, update: if true; 

      // Only authenticated users (admins) can delete posts.
      allow delete: if isAdmin();

      match /comments/{commentId} {
        allow get, list, create: if true;
        allow update, delete: if isAdmin();
      }
    }

    match /resources/{resourceId} {
      allow get, list: if true;
      
      // Allow admins OR an n8n automation to create/update resources.
      // Allow anyone to favorite resources (update).
      allow create, update: if isAdmin() || request.resource.data.createdBy == 'n8n_automation' || request.resource.data.favorites > resource.data.favorites;

      // Only authenticated users (admins) can delete resources.
      allow delete: if isAdmin();
      
      match /comments/{commentId} {
        allow get, list, create: if true;
        allow update, delete: if isAdmin();
      }
    }

    // SECURE ACCESS: Only allow specific actions on sensitive collections.
    match /subscribers/{subscriberId} {
      allow create: if true; // Anyone can subscribe
      allow read, delete, list: if isAdmin(); // Only admins can manage list
    }

    match /wishlist/{wishId} {
      allow create: if true; // Anyone can submit to wishlist
      allow read, delete, list: if isAdmin(); // Only admins can manage list
    }
  }
}
