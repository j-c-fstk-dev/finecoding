rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default: Deny all reads and writes by default.
    match /{document=**} {
      allow read, write: if false;
    }

    // Posts are publicly readable.
    // Writes are handled by server-side logic (admin panel),
    // so client-side writes can be disabled.
    match /posts/{postId} {
      allow read: if true;
      allow write: if request.auth != null; // Only authenticated users (admins)
    }

    // Anyone can read and add comments to posts.
    match /posts/{postId}/comments/{commentId} {
      allow read: if true;
      allow create: if true;
      allow update, delete: if request.auth != null; // Only admins can moderate
    }

    // Resources are publicly readable.
    match /resources/{resourceId} {
      allow read: if true;
      allow write: if request.auth != null; // Only authenticated users (admins)
    }

    // Anyone can read and add comments to resources.
    match /resources/{resourceId}/comments/{commentId} {
      allow read: if true;
      allow create: if true;
      allow update, delete: if request.auth != null; // Only admins can moderate
    }

    // Anyone can subscribe (create), but no one can read the list from the client.
    match /subscribers/{subscriberId} {
      allow read, update, delete: if request.auth != null; // Only admins
      allow create: if true;
    }

    // Anyone can add to the wishlist, but no one can read it from the client.
    match /wishlist/{wishId} {
      allow read, update, delete: if request.auth != null; // Only admins
      allow create: if true;
    }
  }
}
