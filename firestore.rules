
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for authenticated admin
    function isAdmin() {
      return request.auth != null;
    }

    // POSTS: Public can read, only admin can write
    match /posts/{postId} {
      allow read: if true;
      allow write: if isAdmin();

      // COMMENTS on posts: Public can read and create, only admin can delete
      match /comments/{commentId} {
        allow read, create: if true;
        allow update, delete: if isAdmin();
      }
    }

    // RESOURCES: Public can read, only admin can write
    match /resources/{resourceId} {
      allow read: if true;
      allow write: if isAdmin();

      // COMMENTS on resources: Public can read and create, only admin can delete
      match /comments/{commentId} {
        allow read, create: if true;
        allow update, delete: if isAdmin();
      }
    }

    // SUBSCRIBERS: Public can create (subscribe), only admin can read/delete
    match /subscribers/{subscriberId} {
      allow read, delete: if isAdmin();
      allow create: if true;
    }
    
    // WISHLIST: Public can create (suggest), only admin can read/delete
    match /wishlist/{wishId} {
        allow read, delete: if isAdmin();
        allow create: if true;
    }
  }
}
