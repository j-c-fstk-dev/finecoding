rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow public read access to posts and their comments.
    // Writes are restricted to authenticated users (admins).
    match /posts/{postId} {
      allow get, list: if true;
      allow write: if request.auth != null;

      match /comments/{commentId} {
        allow get, list, create: if true;
        allow update, delete: if request.auth != null;
      }
    }

    // Allow public read access to resources and their comments.
    // Writes are restricted to authenticated users (admins).
    match /resources/{resourceId} {
      allow get, list: if true;
      allow write: if request.auth != null;

      match /comments/{commentId} {
        allow get, list, create: if true;
        allow update, delete: if request.auth != null;
      }
    }

    // Allow anyone to subscribe, but only admins can read or manage the list.
    match /subscribers/{subscriberId} {
      allow create: if true;
      allow read, list, update, delete: if request.auth != null;
    }

    // Allow anyone to add to the wishlist, but only admins can manage it.
    match /wishlist/{wishId} {
      allow create: if true;
      allow read, list, update, delete: if request.auth != null;
    }
  }
}