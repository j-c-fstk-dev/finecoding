rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for authenticated admin user
    function isAdmin() {
      return request.auth != null;
    }

    // --- Posts Collection ---
    // Anyone can read posts. Only admins can write.
    match /posts/{postId} {
      allow read: if true;
      allow write: if isAdmin();

      // --- Comments Subcollection ---
      // Anyone can read and create comments. Only admins can delete.
      match /comments/{commentId} {
        allow read, create: if true;
        allow update, delete: if isAdmin();
      }
    }

    // --- Resources Collection ---
    // Anyone can read resources. Only admins can write.
    match /resources/{resourceId} {
      allow read: if true;
      allow write: if isAdmin();
      
      // --- Comments Subcollection ---
      // Anyone can read and create comments. Only admins can delete.
      match /comments/{commentId} {
        allow read, create: if true;
        allow update, delete: if isAdmin();
      }
    }

    // --- Subscribers Collection ---
    // Anyone can add their email. Only admins can read the list.
    match /subscribers/{subscriberId} {
      allow read: if isAdmin();
      allow create: if true;
      allow update, delete: if false; // Nobody can update or delete
    }

    // --- Wishlist Collection ---
    // Anyone can add a tool name. Only admins can read the list.
    match /wishlist/{wishId} {
      allow read: if isAdmin();
      allow create: if true;
      allow update, delete: if false; // Nobody can update or delete
    }
  }
}
