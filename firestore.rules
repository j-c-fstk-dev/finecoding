rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check for admin access (logged in user)
    function isAdmin() {
      return request.auth != null;
    }

    // PUBLIC ACCESS: Allow anyone to read posts and resources.
    match /posts/{postId} {
      // Any user or service can read posts for building pages or newsletters
      allow get, list: if true;
      // Only authenticated admins can write to posts
      allow create, update, delete: if isAdmin();

      match /comments/{commentId} {
        allow get, list, create: if true;
        allow update, delete: if isAdmin();
      }
    }

    match /resources/{resourceId} {
      allow get, list: if true;
      // An admin OR an authenticated service (like n8n) can create/update resources
      allow create, update: if isAdmin() || request.auth.token.firebase.sign_in_provider == 'gcp';
      allow delete: if isAdmin();
      
      match /comments/{commentId} {
        allow get, list, create: if true;
        allow update, delete: if isAdmin();
      }
    }

    // SECURE ACCESS: Only allow specific actions on sensitive collections.
    match /subscribers/{subscriberId} {
      allow create: if true;
      allow read, delete, list: if isAdmin();
    }

    match /wishlist/{wishId} {
      allow create: if true;
      allow read, delete, list: if isAdmin();
    }
  }
}
