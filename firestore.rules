rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if a user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // --- PUBLIC COLLECTIONS ---
    // Anyone can read posts and resources, but only admins can write.
    match /posts/{postId} {
      allow read: if true;
      allow write: if isAuthenticated();
      
      // Comments on posts can be read by anyone, and created by anyone.
      // Only authenticated admins can delete comments.
      match /comments/{commentId} {
        allow read, create: if true;
        allow update, delete: if isAuthenticated();
      }
    }
    
    match /resources/{resourceId} {
      allow read: if true;
      allow write: if isAuthenticated();

      // Comments on resources can be read by anyone, and created by anyone.
      // Only authenticated admins can delete comments.
      match /comments/{commentId} {
        allow read, create: if true;
        allow update, delete: if isAuthenticated();
      }
    }

    // --- PUBLIC-WRITE COLLECTIONS ---
    // Anyone can add to the newsletter or wishlist.
    // Reading the full list is restricted to admins to protect user data.
    match /subscribers/{subscriberId} {
      allow create: if true;
      allow read, list, update, delete: if isAuthenticated();
    }
    
    match /wishlist/{wishId} {
      allow create: if true;
      allow read, list, update, delete: if isAuthenticated();
    }

    // --- DEFAULT DENY ---
    // By default, deny access to any other collection not explicitly defined.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
